<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header bg-primary text-white text-center py-3">
                    <h2 class="card-title h4 mb-0">
                        <i class="fas fa-user-check"></i> Validación de Votante
                    </h2>
                </div>
                <div class="card-body">
                    {{#if error}}
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        <i class="fas fa-exclamation-circle"></i> {{error}}
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                    {{/if}}

                    {{#if yaVoto}}
                    <div class="alert alert-warning" role="alert">
                        <i class="fas fa-info-circle"></i> Ya has ejercido tu derecho al voto en estas elecciones.
                    </div>
                    {{/if}}

                    {{#if noRegistrado}}
                    <div class="alert alert-danger" role="alert">
                        <i class="fas fa-exclamation-triangle"></i> El número de documento no se encuentra en el censo electoral.
                    </div>
                    {{/if}}

                    <form action="/votar/validar" method="POST" class="needs-validation" novalidate>
                        <div class="mb-4">
                            <label for="documento" class="form-label">Número de Documento</label>
                            <div class="input-group">
                                <span class="input-group-text">
                                    <i class="fas fa-id-card"></i>
                                </span>
                                <input type="text" 
                                       class="form-control form-control-lg" 
                                       id="documento" 
                                       name="documento" 
                                       required 
                                       pattern="[0-9]+" 
                                       minlength="8" 
                                       maxlength="18"
                                       placeholder="Ingresa tu número de documento">
                                <div class="invalid-feedback">
                                    Por favor, ingresa un número de documento válido.
                                </div>
                            </div>
                            <div class="form-text">
                                Ingresa tu número de documento sin puntos ni espacios.
                            </div>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="fas fa-sign-in-alt"></i> Ingresar a Votar
                            </button>
                            <a href="/" class="btn btn-outline-secondary">
                                <i class="fas fa-arrow-left"></i> Volver al Inicio
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Bootstrap CSS y JS -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>

<!-- Font Awesome -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">

<!-- Archivo JavaScript personalizado -->
<script src="/js/validacion.js" defer></script> 