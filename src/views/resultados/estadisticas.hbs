<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0"><i class="fas fa-chart-pie me-2"></i>Estadísticas de Participación</h4>
                </div>
                <div class="card-body">
                    {{#if error}}
                    <div class="alert alert-danger">
                        {{error}}
                    </div>
                    {{/if}}

                    <!-- Tarjetas de Resumen -->
                    <div class="row mb-4">
                        <div class="col-md-4">
                            <div class="card bg-primary text-white">
                                <div class="card-body text-center">
                                    <h6 class="card-title">Total Estudiantes</h6>
                                    <h2 class="mb-0">{{estadisticas.total_votantes}}</h2>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="card bg-success text-white">
                                <div class="card-body text-center">
                                    <h6 class="card-title">Han Votado</h6>
                                    <h2 class="mb-0">{{estadisticas.votos_registrados}}</h2>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="card bg-info text-white">
                                <div class="card-body text-center">
                                    <h6 class="card-title">Porcentaje Participación</h6>
                                    <h2 class="mb-0">{{estadisticas.porcentaje_participacion}}%</h2>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Gráfico de Progreso -->
                    <div class="row mb-4">
                        <div class="col-12">
                            <div class="card">
                                <div class="card-body">
                                    <h5 class="card-title">Progreso de Votación</h5>
                                    <div class="progress" style="height: 25px;">
                                        <div class="progress-bar progress-bar-striped progress-bar-animated" 
                                             role="progressbar" 
                                             style="width: {{estadisticas.porcentaje_participacion}}%"
                                             aria-valuenow="{{estadisticas.porcentaje_participacion}}" 
                                             aria-valuemin="0" 
                                             aria-valuemax="100">
                                            {{estadisticas.porcentaje_participacion}}%
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Desglose por Grados -->
                    <div class="row">
                        <div class="col-12">
                            <div class="card">
                                <div class="card-body">
                                    <h5 class="card-title mb-4">Participación por Grados</h5>
                                    <div class="table-responsive">
                                        <table class="table table-hover">
                                            <thead class="table-primary">
                                                <tr>
                                                    <th>Grado</th>
                                                    <th>Total Estudiantes</th>
                                                    <th>Han Votado</th>
                                                    <th>Pendientes</th>
                                                    <th>Porcentaje</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                {{#each estadisticas.por_grado}}
                                                <tr>
                                                    <td>{{grado}}</td>
                                                    <td>{{total}}</td>
                                                    <td>{{votaron}}</td>
                                                    <td>{{pendientes}}</td>
                                                    <td>
                                                        <div class="progress" style="height: 20px;">
                                                            <div class="progress-bar bg-success" 
                                                                 role="progressbar" 
                                                                 style="width: {{porcentaje}}%"
                                                                 aria-valuenow="{{porcentaje}}" 
                                                                 aria-valuemin="0" 
                                                                 aria-valuemax="100">
                                                                {{porcentaje}}%
                                                            </div>
                                                        </div>
                                                    </td>
                                                </tr>
                                                {{/each}}
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Scripts necesarios para las gráficas -->
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
